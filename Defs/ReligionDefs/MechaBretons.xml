			<li Class="ReligionsOfRimworld.ReligionProperty_ThingDef">
				<propertyObject>Corpse_YorkshireTerrier</propertyObject>
				<subject>
					<piety>RoR_PietyFoodBad</piety>
				</subject>
			</li>
			<li Class="ReligionsOfRimworld.ReligionProperty_ThingDef">
				<propertyObject>Meat_YorkshireTerrier</propertyObject>
